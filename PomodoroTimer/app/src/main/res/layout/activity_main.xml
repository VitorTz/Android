<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingHorizontal="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/previousOptionBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:src="@drawable/arrow_left_wine"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chip" />

        <ImageButton
            android:id="@+id/nextOptionBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:src="@drawable/arrow_right_wine"/>

    </LinearLayout>

    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="25\n00"
        android:textSize="164sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/wine"
        android:lineSpacingExtra="-40dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/configBtn"
            android:onClick="openConfig"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/pink_200"
            app:icon="@drawable/settings_wine"
            app:iconGravity="textStart"
            app:iconTint="@color/wine"
            app:iconPadding="1dp"
            android:layout_marginEnd="5dp"
            tools:ignore="UsingOnClickInXml" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/pauseBtn"
            android:onClick="handlePause"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:backgroundTint="@color/pink"
            app:icon="@drawable/pause_wine"
            app:iconGravity="textStart"
            app:iconTint="@color/wine"
            app:iconPadding="1dp"
            android:layout_marginEnd="5dp"
            tools:ignore="UsingOnClickInXml" />
        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:onClick="resetCountDown"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/pink_200"
            app:icon="@drawable/reset_wine"
            app:iconGravity="textStart"
            app:iconTint="@color/wine"
            app:iconPadding="1dp"
            android:layout_marginEnd="5dp"
            tools:ignore="UsingOnClickInXml" />
    </LinearLayout>

</LinearLayout>