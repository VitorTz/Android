<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:orientation="vertical"
    android:gravity="top"
    android:padding="20dp"
    android:background="@color/pink">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="60dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="@string/settings"
            android:textColor="@color/grey"
            android:textSize="32sp"
            android:gravity="center"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/closeBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:backgroundTint="@color/red"
            app:icon="@drawable/baseline_close_24"
            app:iconTint="@color/grey"
            app:iconGravity="textStart"
            app:iconSize="30dp"
            app:iconPadding="1dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:background="@drawable/rounde_number_picker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="@string/focus_length"
            android:textSize="18sp"
            android:textColor="@color/grey"
            android:paddingStart="10dp"
            android:gravity="center_vertical"/>

        <LinearLayout
            android:paddingStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounde_number_picker"
            android:gravity="end">

            <TextView
                android:id="@+id/focusLengthInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="00"
                android:textColorHint="@color/grey"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/grey"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/focusLengthUpButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@color/red"
                    app:icon="@drawable/baseline_arrow_drop_up_24"
                    app:iconGravity="textStart"
                    app:iconTint="@color/grey"
                    app:iconPadding="1dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/focusLengthDownButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@color/red"
                    app:icon="@drawable/baseline_arrow_drop_down_24"
                    app:iconGravity="textStart"
                    app:iconTint="@color/grey"
                    app:iconPadding="1dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:background="@drawable/rounde_number_picker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="Short break length"
            android:textSize="18sp"
            android:textColor="@color/grey"
            android:paddingStart="10dp"
            android:gravity="center_vertical"/>

        <LinearLayout
            android:paddingStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounde_number_picker"
            android:gravity="end">

            <TextView
                android:id="@+id/shortBreakLengthInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="00"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/grey"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="20dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/shortBreakLengthUpButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@color/red"
                    app:icon="@drawable/baseline_arrow_drop_up_24"
                    app:iconGravity="textStart"
                    app:iconTint="@color/grey"
                    app:iconPadding="1dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/shortBreakLengthDownButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@color/red"
                    app:icon="@drawable/baseline_arrow_drop_down_24"
                    app:iconGravity="textStart"
                    app:iconTint="@color/grey"
                    app:iconPadding="1dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:background="@drawable/rounde_number_picker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="Long break length"
            android:textSize="18sp"
            android:textColor="@color/grey"
            android:paddingStart="10dp"
            android:gravity="center_vertical"/>

        <LinearLayout
            android:paddingStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounde_number_picker"
            android:gravity="end">

            <TextView
                android:id="@+id/longBreakLengthInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="00"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/grey"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="20dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/longBreakLengthUpButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@color/red"
                    app:icon="@drawable/baseline_arrow_drop_up_24"
                    app:iconGravity="textStart"
                    app:iconTint="@color/grey"
                    app:iconPadding="1dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/longBreakLengthDownButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@color/red"
                    app:icon="@drawable/baseline_arrow_drop_down_24"
                    app:iconGravity="textStart"
                    app:iconTint="@color/grey"
                    app:iconPadding="1dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:background="@drawable/rounde_number_picker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="@string/pomodoros_until_break"
            android:textSize="18sp"
            android:textColor="@color/grey"
            android:paddingStart="10dp"
            android:gravity="center_vertical"/>

        <LinearLayout
            android:paddingStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounde_number_picker"
            android:gravity="end">

            <TextView
                android:id="@+id/pomodorosLengthInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="00"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/grey"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="20dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/pomodorosLengthUpButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@color/red"
                    app:icon="@drawable/baseline_arrow_drop_up_24"
                    app:iconGravity="textStart"
                    app:iconTint="@color/grey"
                    app:iconPadding="1dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/pomodorosLengthDownButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@color/red"
                    app:icon="@drawable/baseline_arrow_drop_down_24"
                    app:iconGravity="textStart"
                    app:iconTint="@color/grey"
                    app:iconPadding="1dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>